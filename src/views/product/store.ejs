<%- include('../partials/head.ejs') %>
   
<%- include('../partials/nav.ejs') %>

    <div id="product-store" style="margin: 10px auto;max-width: 1100px;">
        <h3 style="text-align: center">Đăng sản phẩm</h3>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Ảnh bìa</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Giá bán</th>
                <th scope="col">Đã bán</th>
                <th scope="col">Tồn kho</th>
                <th scope="col">Tùy chọn</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(product => { %>
                <tr>
                    <td><img src="<%= product.coverImg %>" alt=""></td>
                    <td><%= product.productName %></td>
                    <td><%= product.price * ( 100 - product.discount) / 100  %></td>
                    <td><%= product.sold %></td>
                    <td><%= product.quantity%></td>
                    <td>
                        <a href="/product/details/<%= product.slug %>"><button type="button" class="btn btn-outline-primary">Xem lại</button></a>
                        <a href="/my/store/product/edit/<%= product.slug %>"><button type="button" class="btn btn-outline-success">Sửa</button></a>
                        <button type="button" class="btn btn-outline-danger">Xóa</button>
                    </td>
                </tr>
                <% }) %>  
            </tbody>
          </table>
    </div>

    <%- include('../partials/footer.ejs') %>